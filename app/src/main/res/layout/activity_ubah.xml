<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Ubah"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Edit"
            android:layout_marginBottom="16dp"
            android:textSize="26sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_ubah_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Judul Lagu"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/et_ubah_artis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Band/Artis"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/et_ubah_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Album"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/et_ubah_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Genre Lagu"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/et_ubah_lirik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lirik"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/et_ubah_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="https://www.youtube.com/watch?v="
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_ubah_ubah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ubah"/>

    </LinearLayout>

</ScrollView>